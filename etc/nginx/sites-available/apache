}

# Ben: all the other virtual host are just proxied to apache
# PhpMyAdmin
server {
  server_name   myadmin.visual-salade.com;
  root          /usr/share/phpmyadmin/;

  location / {
    proxy_pass  http://127.0.0.1:8080;
    #port_in_redirect off;
    # include     /etc/nginx/conf.d/proxy.conf;
    # proxy_redirect  default;
    #proxy_redirect http://myadmin.visual-salade.com:8080/ http:myadmin.visual-salade.com/;
    #proxy_redirect http://myadmin.visual-salade.com:8080/ /;
  }
}

#owncloud
server {
  server_name   cloud.visual-salade.com;
  root          /home/visual-salade.com/owncloud/;

  location / {
    proxy_pass http://127.0.0.1:8080;
  }
}

# Dolibarr
server {
  server_name   dolibarr.visual-salade.com;
  root          /home/visual-salade.com/dolibarr/htdocs/;

  location / {
    proxy_pass http://127.0.0.1:8080;
  }
}

# Project
server {
  server_name   project.visual-salade.com;
  root          /home/visual-salade.com/project/; 

  # each location is independent
  location / {
    proxy_pass  http://127.0.0.1:8080;
    proxy_read_timeout 300;
    proxy_connect_timeout 60;
  }
}

#  
server {
  server_name   selephemere.com www.selephemere.com;
  root          /home/selephemere.com/blog/;

  # each location is independent
  location / {
    proxy_pass  http://127.0.0.1:8080;
  }
}

